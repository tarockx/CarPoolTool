@model IEnumerable<CarPoolTool.Models.UserTotal>

@{
    ViewBag.Title = "Statistiche";
}

<h2>Statistiche di partecipazione</h2>

<div class="ui stackable cards">
    @{
        int i = 0;
        foreach (var item in Model)
        {
            ViewData["rank"] = i + 1;
            @Html.Partial("UserStatsDetailView", item);
            i++;
        }
    }
</div>